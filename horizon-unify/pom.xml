<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.later</groupId>
    <artifactId>horizon-unify</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>

    <modules>
        <module>unify-authority</module>
        <module>unify-client-crm</module>
        <module>unify-client-okr</module>
        <module>unify-common</module>
    </modules>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.6.15</version>
    </parent>
    <properties>
        <java.version>8</java.version>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <maven.compiler.encoding>UTF-8</maven.compiler.encoding>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <!-- S 第三方依赖包版本控制（任意第三方依赖包必须表现于此）S -->
        <mysql-connector-java.version>6.0.6</mysql-connector-java.version>
        <orika-core.version>1.5.4</orika-core.version>
        <lombok.version>1.18.30</lombok.version>
        <easy-captcha.version>1.6.2</easy-captcha.version>
        <fastjson.version>2.0.41</fastjson.version>
        <unify-common.version>1.0.0</unify-common.version>
        <!-- E 第三方依赖包版本控制（任意第三方依赖包必须表现于此）E -->
    </properties>
    <dependencies>
    </dependencies>
    <dependencyManagement>
        <dependencies>
            <!--<dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>2.6.15</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>-->
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>2021.0.8</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!--<dependency>
                <groupId>com.alibaba.cloud</groupId>
                <artifactId>spring-cloud-alibaba-dependencies</artifactId>
                <version>2021.0.8.0</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>-->

            <!-- S 第三方依赖包控制（任意第三方依赖包必须表现于此）S -->
            <dependency>
                <groupId>mysql</groupId>
                <artifactId>mysql-connector-java</artifactId>
                <version>${mysql-connector-java.version}</version>
            </dependency>
            <dependency>
                <groupId>ma.glasnost.orika</groupId>
                <artifactId>orika-core</artifactId>
                <version>${orika-core.version}</version>
            </dependency>
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.whvcse</groupId>
                <artifactId>easy-captcha</artifactId>
                <version>${easy-captcha.version}</version>
            </dependency>
            <dependency>
                <groupId>com.alibaba.fastjson2</groupId>
                <artifactId>fastjson2</artifactId>
                <version>${fastjson.version}</version>
            </dependency>
            <dependency>
                <groupId>com.later</groupId>
                <artifactId>unify-common</artifactId>
                <version>${unify-common.version}</version>
            </dependency>
            <!-- E 第三方依赖包控制（任意第三方依赖包必须表现于此）E -->
        </dependencies>
    </dependencyManagement>
    <profiles>
        <profile>
            <id>native</id>
            <properties>
                <profile-name>native</profile-name>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <excludes>
                            <exclude>*-development.*</exclude>
                            <exclude>*-production.*</exclude>
                            <exclude>*-testify.*</exclude>
                            <exclude>static/rivers/**</exclude>
                        </excludes>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <id>development</id>
            <properties>
                <profile-name>development</profile-name>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <excludes>
                            <exclude>*-native.*</exclude>
                            <exclude>*-production.*</exclude>
                            <exclude>*-testify.*</exclude>
                        </excludes>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <profile-name>production</profile-name>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <excludes>
                            <exclude>*-native.*</exclude>
                            <exclude>*-development.*</exclude>
                            <exclude>*-testify.*</exclude>
                        </excludes>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <id>testify</id>
            <properties>
                <profile-name>testify</profile-name>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <excludes>
                            <exclude>*-native.*</exclude>
                            <exclude>*-development.*</exclude>
                            <exclude>*-production.*</exclude>
                        </excludes>
                    </resource>
                </resources>
            </build>
        </profile>
    </profiles>

    <repositories>
        <repository>
            <id>central</id>
            <url>https://maven.aliyun.com/repository/central</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

</project>